# PowerTrader Environment Variables Template
# Copy this file to .env.development and .env.production and fill in the values

# =============================================================================
# Docker Configuration
# =============================================================================
NODE_ENV=development
BUILD_TARGET=development
PORT=3040
DOCKER_COMMAND=pnpm dev
RESTART_POLICY=unless-stopped
HEALTH_INTERVAL=60s

# Development-specific Docker settings
DEV_VOLUME_MOUNT=.:/app

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3040

# =============================================================================
# Database (Supabase)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# Authentication (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-key
CLERK_SECRET_KEY=sk_test_your-key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/inventory
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/inventory

# =============================================================================
# AI (Google Gemini)
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# Storage Configuration
# =============================================================================
NEXT_PUBLIC_STORAGE_BUCKET=powertrader-images
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_URL_IMPORT=true
ENABLE_ANALYTICS=true

# =============================================================================
# Security & Performance
# =============================================================================
NEXT_TELEMETRY_DISABLED=1
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# Monitoring (Optional)
# =============================================================================
SENTRY_DSN=
VERCEL_ANALYTICS_ID=
POSTHOG_KEY=